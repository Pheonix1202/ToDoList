<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_normal"
    android:layout_marginLeft="@dimen/padding_normal"
    android:layout_marginRight="@dimen/padding_normal"
    android:background="@drawable/shape_recycler_view_item"
    android:orientation="horizontal"
    android:padding="@dimen/padding_normal"
    android:paddingRight="@dimen/paddingRight_indicator">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/text_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="4dp"
            android:text="Common item title"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_view_date"
            style="@style/text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:text="12:30"
            android:textColor="@color/light_gray" />
    </LinearLayout>


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_weight="2"
        android:columnCount="3"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_priority"
            style="@style/view_priority"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:layout_column="2"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/view_success"
            style="@style/text_field"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:drawablePadding="4dp"
            android:src="@drawable/ic_failed"
            android:textColor="#C80700"
             />

    </GridLayout>

</LinearLayout>